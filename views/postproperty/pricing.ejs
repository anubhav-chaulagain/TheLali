<div class="pricing-section">
    <h2>Pricing Section</h2>
  <div class="form-group">
    <label for="price">Price</label>
    <input type="number" id="price" name="price" placeholder="Rs.0" />
  </div>

  <div class="form-group">
    <label for="price-words">Price in Words</label>
    <input type="text" id="price-words" name="priceInWords" placeholder="Price in Words..."/>
  </div>

  <div class="form-group">
    <label>Negotiable</label>
    <div class="negotiable-options">
      <p>
        <input type="radio" value="yes" name="negoOptions" id="yes" class="negotiable-option"><label for="yes">yes</label>
      </p>
      <p>
        <input type="radio"value="no" name="negoOptions" id="no" class="negotiable-option"><label for="no">no</label>
      </p>
    </div>
  </div>
</div>
