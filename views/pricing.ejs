<div class="pricing-section">
    <h2>Pricing Section</h2>
  <div class="form-group">
    <label for="price">Price</label>
    <input type="number" id="price" placeholder="Rs.0" />
  </div>

  <div class="form-group">
    <label for="price-words">Price in Words</label>
    <input type="text" id="price-words" placeholder="Price in Words..." />
  </div>

  <div class="form-group">
    <label>Negotiable</label>
    <div class="negotiable-options">
      <button class="negotiable-option" id="yes">Yes</button>
      <button class="negotiable-option" id="no">No</button>
    </div>
  </div>
</div>
